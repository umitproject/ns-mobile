<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ProgressBar android:layout_width="match_parent" android:id="@+id/progress" android:layout_height="wrap_content" style="@android:style/Widget.ProgressBar.Horizontal"></ProgressBar>
    <TableLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tableLayout1">
        <TableRow android:id="@+id/row1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:baselineAligned="false">
            <EditText android:layout_width="wrap_content" android:id="@+id/from" android:layout_height="wrap_content" android:text="EditText" android:layout_weight="1"></EditText>
            <EditText android:layout_width="wrap_content" android:id="@+id/to" android:layout_height="wrap_content" android:text="EditText" android:layout_weight="1"></EditText>
        </TableRow>        
    </TableLayout>
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_height="wrap_content" android:layout_width="match_parent">
        <ListView android:id="@+id/listView1" android:layout_height="250dip" android:layout_width="160dip"></ListView>
	      <ScrollView android:id="@+id/scroll" android:layout_toRightOf="@+id/listView1" android:layout_width = "wrap_content" android:layout_height = "wrap_content">	
            <TextView android:text="logs" android:layout_height="200dip" android:id="@+id/results" android:layout_width="160dip"></TextView>
        </ScrollView>
    </RelativeLayout>
	<TableRow android:id="@+id/row1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:baselineAligned="true">
	<Button android:text="Start" android:id="@+id/discover" android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="left"></Button>
	<Button android:text="Stop" android:id="@+id/stop" android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="left"></Button>
    <ImageView android:layout_width="wrap_content" android:src="@drawable/icon" android:id="@+id/logo" android:layout_height="wrap_content" android:layout_weight="1" android:layout_gravity="left"></ImageView>
    </TableRow>
</LinearLayout>
